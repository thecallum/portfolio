---
import { Image, Picture } from "astro:assets";
import photo from "../../images/photo.jpg";
// import photo from "../../assets/photo_3.jpg"

const bulletPoints = [
  "Highly skilled at progressive enhancement, design systems & UI Engineering",
  "Proven experience building successful products for clients across several countries",
  " Highly skilled at progressive enhancement",
];
---

<!--  --><!-- Main part -->
<div
  class="w-[calc(100%)] max-w-[1400px] mx-auto flex flex-col justify-between px-6 mt-6 md:w-[calc(100%-30px)] lg:flex-row"
> 
  <!-- left -->
  <div class="lg:w-2/3 bg-pink-2000 flex flex-col items-start justify-center">
    <div class="bg-gray-6000">
      <h1 class="text-[10vw]/[10vw] md:text-6xl text-slate-100">
        Callum Macpherson.
      </h1>
      <div class="text-[6vw]/[6vw] md:text-4xl text-slate-400 mt-2 lg:mt-4">
        Fullstack developer
      </div>

      <p class="text-md mt-8 lg:text-xl">
        I build pixel-perfect, engaging, and accessible digital experiences.
      </p>

      <p class="text-md text-slate-400 mt-8 lg:mt-12 lg:text-lg">
        Tailwind fanatic
      </p>

      <ul class="flex mt-4 flex-col list-disc leading-7">
        {
          bulletPoints.map((x) => (
            <li class="mt-2 text-md content-[''] lg:text-lg">
              {x}
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <!-- MAKE ME 100VH -->

  <!-- right -->
  <div
    class="flex items-center justify-center pt-4 pr-4 mt-8 sm:justify-end lg:w-1/3"
  >
    <div class="w-full relative sm:w-auto lg:w-full">
      <Image
        src={photo}
        alt="photo of me"
        class="h-auto z-20 relative w-full sm:h-[600px] sm:w-auto lg:h-auto lg:w-full"
      />

      <div class="bg-slate-700 absolute -top-4 left-4 w-full h-full z-10"></div>
    </div>
  </div>
</div>
